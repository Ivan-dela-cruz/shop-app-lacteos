<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.ReviewOrderActivity">

    <LinearLayout
        android:id="@+id/layot_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/md_blue_800"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/review_order_btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_home_gray_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Carrito"
                android:textColor="@color/md_white_1000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"

                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="@string/name_project"
                android:textColor="@color/colorWhite"
                android:textSize="11dp" />


        </RelativeLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/review_order_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="45dp"
        android:background="@color/md_blue_800"
        android:descendantFocusability="beforeDescendants"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layot_header"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/md_blue_800"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/card_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bottom_sheet_background"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_pedido"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/review_order_txt_total"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_pedido"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_regular"
                        android:text="$ 50"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/review_order_txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_pedido"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10 de octubre del 2020"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />




                    <LinearLayout
                        android:id="@+id/card_review2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/bottom_sheet_backgroundligth"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/text_pedido2"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="start|center"
                                android:text="Detalle"
                                android:textColor="@color/md_blue_900"
                                android:textSize="20sp" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="3dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="34dp"
                                android:layout_marginEnd="20dp"
                                android:background="@color/md_blue_900" />

                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/colorWhite"
                android:id="@+id/review_order_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card_review"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="0dp">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/review_order_btn_home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/opensans_regular"
        android:text="Realiza otro pedido"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>